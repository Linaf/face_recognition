cmake_minimum_required(VERSION 2.6)
set (PROJECT_NAME "face_recognition")
project(${PROJECT_NAME})

find_package(OpenCV REQUIRED)
include_directories(${OpenCV_INCLUDE_DIRS})
find_package(Boost COMPONENTS system filesystem REQUIRED)

include_directories ("${PROJECT_BINARY_DIR}")
include_directories ("${PROJECT_SOURCE_DIR}/utils")
include_directories ("${PROJECT_SOURCE_DIR}/trainer")
include_directories ("${PROJECT_SOURCE_DIR}/classifier")
include_directories ("/home/lina/setup/face-analysis-sdk-master/src/qt-gui/")
include_directories ("/home/lina/setup/face-analysis-sdk-master/src/")
include_directories ("/home/lina/setup/face-analysis-sdk-master/build/src/")
include_directories ("/home/lina/opencv-2.4.11/include/")
include_directories ("/usr/include/qt4/")
add_subdirectory (utils)
add_subdirectory (trainer)
add_subdirectory (classifier)
set (EXTRA_LIBS ${EXTRA_LIBS} utils trainer classifier)
SET(CI2CV_LIBRARY avatarAnim  clmTracker utilities -L/home/lina/setup/face-analysis-sdk-master/build/lib/)
SET(OpenCV_LIBS opencv_core opencv_imgproc opencv_highgui opencv_objdetect -L/home/lina/opencv-2.4.11/build/lib/)
SET(QT_LIB QVTKWidgetPlugin -L/usr/lib/qt4/plugins/designer/)
SET(HEADERS_ONE GroupPicture.cpp)
SET(HEADERS_TWO GroupPicture.h)

add_executable (trainer_demo trainer_demo.cpp ${EXTRA_LIBS})
target_link_libraries (trainer_demo  ${EXTRA_LIBS})
target_link_libraries(trainer_demo ${OpenCV_LIBS})
target_link_libraries(trainer_demo ${Boost_FILESYSTEM_LIBRARY} ${Boost_SYSTEM_LIBRARY})

add_executable (classifier_demo classifier_demo.cpp ${EXTRA_LIBS})
target_link_libraries (classifier_demo  ${EXTRA_LIBS})
target_link_libraries(classifier_demo ${OpenCV_LIBS})
target_link_libraries(classifier_demo ${Boost_FILESYSTEM_LIBRARY} ${Boost_SYSTEM_LIBRARY})

add_executable(group-picture-tracker main.cpp ${HEADERS_ONE} ${HEADERS_TWO})
target_link_libraries(group-picture-tracker
${LIBS} ${EXTRA_LIBS} ${OpenCV_LIBS} ${CI2CV_LIBRARY} ${Boost_FILESYSTEM_LIBRARY} ${Boost_SYSTEM_LIBRARY})
